<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("partials/header") %>
    <title>Login</title>
  </head>
  <body>
    <%- include ("partials/nav.ejs") %>
    <h1>Welcome to <%= user.name %>'s page.</h1>
    <img src="<%= user.thumbnail  %> " alt="" />
    <p><%= user.googleID %></p>
    <p><%= user.date %></p>

    <% if (postFound.length > 0){ %>
      <% for(let i = 0; i<postFound.length; i++){ %>
        <div class="card" style="width: 18rem">
          <div class="card-body">
            <h5 class="card-title"><%= postFound[i].title %></h5>
            <p class="card-text"><%= postFound[i].content %></p>
            <a href="#" class="btn btn-primary"><%= postFound[i].date %> </a>
          </div>
        </div>
        <% } %>  
    <% } %>  

  </body>
</html>
